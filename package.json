{
  "name": "readme-viewer",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "keywords": [],
  "author": "Thorsten Dobbelaere",
  "license": "Unlicense",
  "description": "A simple readme viewer for Electron",
  "devDependencies": {
    "electron": "^35.1.1",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "thorstendobbelaere.readme-viewer",
    "productName": "ReadmeViewer",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
